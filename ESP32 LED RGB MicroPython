from machine import Pin
import utime

# Configuraci√≥n de pines RGB
red = Pin(19, Pin.OUT)
green = Pin(5, Pin.OUT)
blue = Pin(2, Pin.OUT)

# Definimos los colores como tuplas (R, G, B)
colors = [
    (0, 1, 1),  # Rojo
    (1, 0, 1),  # Verde
    (1, 1, 0),  # Azul
]

def set_color(r, g, b):
    red.value(r)
    green.value(g)
    blue.value(b)

while True:
    for color in colors:
        set_color(*color)
        utime.sleep(1)
